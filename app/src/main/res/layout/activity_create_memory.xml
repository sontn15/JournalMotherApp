<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_img_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/roboto_medium"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Share the moment"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/imageView_memory"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/tv_img_share"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/ic_stub" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_feeling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_memory"
            android:layout_marginBottom="@dimen/_8sdp">

            <EditText
                android:id="@+id/fellingEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_felling"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_feeling">

            <EditText
                android:id="@+id/contentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="@string/hint_memory"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_below="@+id/input_layout_description"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel_memory"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="1"
                android:background="@drawable/edt_custom_xam"
                android:fontFamily="@font/roboto_regular"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <Button
                android:id="@+id/btnSave_memory"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="1"
                android:background="@drawable/edt_custom_xanhdatroi"
                android:fontFamily="@font/roboto_regular"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
